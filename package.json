{
  "name": "epub-reader",
  "version": "1.1.2",
  "private": true,
  "description": "EPUB Reader Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "vite --mode electron",
    "electron:build": "vite build --mode electron && electron-builder",
    "electron:preview": "vite preview --mode electron",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.epubreader.app",
    "productName": "EPUB Reader",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist_electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.books"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@vueuse/core": "^13.1.0",
    "epubjs": "^0.3.88",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "vite": "^4.3.9",
    "wait-on": "^7.2.0"
  }
}
