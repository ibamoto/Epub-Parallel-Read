{
  "name": "epub-reader",
  "version": "1.0.4",
  "description": "EPUB Reader Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "cross-env NODE_ENV=development concurrently -k \"BROWSER=none npm run dev\" \"wait-on tcp:5174 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.epubreader.app",
    "mac": {
      "category": "public.app-category.books"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js"
    ]
  },
  "dependencies": {
    "@vueuse/core": "^13.1.0",
    "epubjs": "^0.3.93",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.4",
    "wait-on": "^7.2.0"
  }
}
